void menu()
{
	int menuOption = 0;

	menuText();

	while (menuOption != 5)
	{
		cin >> menuOption;
		if (cin.fail())
		{
			menuOption = 0;
			cin >> menuOption;
		}
		else
		{
			switch (menuOption)
			{
			case 1:
				cout << "The game is setup in a 3x3 grid full of smaller 3x3 grids." << endl;
				cout << "Two players will alternate turns, each picking squares within the grids." << endl;
				cout << "When a player successfully, linearly fills 3 spaces in the larger grid, that player wins" << endl;
				break;
			case 2: system("cls");
				gameControl();
				break;
			case 3: cout << "Version 0.01 Last Updated:2/15/17" << endl;
				break;
			case 4:
				menuText();
				break;
			case 5:
				return;
				break;
			default:
				break;
			}
		}
	}
}
