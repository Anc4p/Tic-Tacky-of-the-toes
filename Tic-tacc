#include <iostream>
#include <stdlib.h>
#include "Board.h"
#include "biggerBoard.h"

using namespace std;

void menuText();
void menu();
void standardGameControl();
void enhancedGameControl();


int main()
{
	menu();
	return 0;

}

void menuText()
{
	system("cls");
	cout << "Welcome to Tic-Tacky-of-the-Toes" << endl;
	cout << "Choose one of the following options:" << endl;
	cout << "1. Display Instructions" << endl;
	cout << "2. Start Standard Game" << endl;
	cout << "3. Start Enhanced Game" << endl;
	cout << "4. Display version info" << endl;
	cout << "5. Display the main menu" << endl;
	cout << "6. Exit the program" << endl;
}

void menu()
{
	int menuOption = 0;

	menuText();

	while (menuOption != 5)
	{
		cin >> menuOption;
		if (cin.fail()) //if input is invalid
		{
			system("cls");
			cin.clear(); //clears input value
			cin.ignore(std::numeric_limits<std::streamsize>::max(), '\n'); //ignores character, allows new input via clearing out mem location
																		   //causes stream size to be only numeric values, and ignores everything else, and only lets you put in numeric limits
			cout << "Invalid input\nPlease try again" << endl;
			cin >> menuOption;
		}
		switch (menuOption)
		{
		case 1:
			cout << "The game is setup in a 3x3 grid full of smaller 3x3 grids." << endl;
			cout << "Two players will alternate turns, each picking squares within the grids." << endl;
			cout << "When a player successfully, linearly fills 3 spaces in the larger grid, that player wins" << endl;
			break;
		case 2:
			system("cls");
			standardGameControl();
			break;
		case 3:
			system("cls");
			enhancedGameControl();
			break;
		case 4:
			cout << "Version 0.10 Last Updated:2/17/17" << endl;
			break;
		case 5:
			menuText();
			break;
		case 6:
			return;
			break;
		default:
			cout << "Error: Invalid Chocie" << endl;
			cout << "Please enter a valid choice: " << endl;
			break;
		}
	}
}

void standardGameControl()
{
	cout << "Game starting..." << endl;
	Board b1(0);
	b1.displayBoard();
	while (b1.Victory == false)
	{
		if (b1.Victory == false)
		{
			cout << "Player X turn" << endl;
			b1.makeStandardMove('X');
		}
		if (b1.Victory == false)
		{
			cout << "Player O turn" << endl;
			b1.makeStandardMove('O');
		}
		else
		{
			cout << "Press 2 to start a new game" << endl;
			cout << "Press 4 to display the menu" << endl;
			return;
		}
	}
}

