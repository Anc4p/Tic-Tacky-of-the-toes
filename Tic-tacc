#include <iostream>

using namespace std;

void menu()
{
	int menuOption = 0;

	while (menuOption != 4)
	{
		cout << "Welcome to Tic-Tacky-of-the-Toes" << endl;
		cout << "Choose one of the following options:" << endl;
		cout << "1. Display Instructions" << endl;
		cout << "2. Start Game" << endl;
		cout << "3. Display version info" << endl;
		cout << "4. Exit the program" << endl;
		cin >> menuOption;
		
	switch (menuOption)
	{
	case 1:
		break;
	case 2:
		break;
	case 3:
		cout << "Version 0.01 Last Updated:2/15/17" << endl;
		break;
	case 4:
		return;
		break;
	default:
	}
	
	}


}

int main()
{
	menu();
	return 0;
}
